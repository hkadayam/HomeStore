#!/usr/bin/env bash
# Startup script for Homestore

container="homestore"
image="ecr.vip.ebayc3.com/sds/sds_develop:2.1"

name_plus_date="${container}"-$(date +"%Y%m%d%H%M")
mount_base_dir=$(pwd)
mount_src="${mount_base_dir}/${name_plus_date}"
mount_dst="/home/${container}"
mount_opts="--mount src=${mount_src},target=${mount_dst},type=bind"
host=$(hostname -f)
port=5000

entrypoint="tail -f /dev/null"

#entrypoint="cd ${mount_dst} &&
#            /usr/bin/vol_test.py -t recovery >> hs_log_recovery.txt &&
#            /usr/bin/vol_test.py -t vol_del >> hs_log_vol_del.txt"

start() {
    mkdir ${mount_src}
    docker pull ${image}
    docker run --rm --privileged ${mount_opts} -v ${mount_base_dir}:/tmp/source \
        --pid=host -e TZ=GMT-7 -d --name ${container} \
        --entrypoint /bin/sh ${image} -c "${entrypoint}"
}

stop() {
	docker stop ${container}
}

status() {
    docker ps | grep ${container}
}

logs() {
    docker logs ${container}
}

login() {
    docker exec -it ${container} bash
}

test_normal() {
    docker exec -it ${container} "cd /opt/bin/ && ./vol_test.py --test_suits=normal"
}

case "$1" in
    'start')
            start
            ;;
    'stop')
            stop
            ;;
    'restart')
            stop
            start
            ;;
    'logs')
            logs
            ;;
    'login')
            login
            ;;
    'status')
            status
            ;;
    'test_normal')
            test_normal
            ;;
    *)
            echo
            echo "Usage: $0 { start | stop | restart | logs | login | status }"
            echo
            exit 1
            ;;
esac

